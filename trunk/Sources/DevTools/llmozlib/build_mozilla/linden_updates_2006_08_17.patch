+NS_IMETHODIMP
+nsToolkit::RemoveObserver(nsIToolkitObserver* aObserver)
+{
+    if (! aObserver)
+        return NS_ERROR_NULL_POINTER;
+
+    mObservers.RemoveObject(aObserver);
+
+    return NS_OK;
+
+}
